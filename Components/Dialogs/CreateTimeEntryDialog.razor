@using Zeiterfassung.Data
@using System.ComponentModel.DataAnnotations

@namespace Zeiterfassung.Components.Dialogs

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Neuen Zeiteintrag erstellen</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" Model="newTimeEntry">
            <MudSelect T="int" @bind-Value="newTimeEntry.ProjectId" For="@(() => newTimeEntry.ProjectId)" Label="Projekt" Required="true" RequiredError="Bitte ein Projekt auswählen.">
                @foreach (var proj in UserProjects)
                {
                    <MudSelectItem Value="@proj.Id">@proj.Name</MudSelectItem>
                }
            </MudSelect>

            <MudTextField @bind-Value="newTimeEntry.Description" Label="Beschreibung" Required="true" RequiredError="Bitte eine Beschreibung angeben." For="@(() => newTimeEntry.Description)" Class="mt-3" />

            <MudDatePicker @bind-Date="date" Label="Datum" Required="true" Class="mt-3" />
            <div class="d-flex mt-3">
                <MudTimePicker @bind-Time="startTime" Label="Startzeit" Required="true" />
                <MudTimePicker @bind-Time="endTime" Label="Endzeit" Required="true" Class="ml-3" />
            </div>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Abbrechen</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@(!success)">Speichern</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public List<Project> UserProjects { get; set; } = new();

    private MudForm form;
    private bool success;
    private TimeEntry newTimeEntry = new();

    // Hilfsvariablen für die MudBlazor Picker
    private DateTime? date = DateTime.Today;
    private TimeSpan? startTime = new TimeSpan(9, 0, 0);
    private TimeSpan? endTime = new TimeSpan(10, 0, 0);

    private void Submit()
    {
        // Kombiniere Datum und Zeit vor dem Schließen
        if (date.HasValue && startTime.HasValue && endTime.HasValue)
        {
            newTimeEntry.StartTime = date.Value.Add(startTime.Value);
            newTimeEntry.EndTime = date.Value.Add(endTime.Value);
            MudDialog.Close(DialogResult.Ok(newTimeEntry));
        }
    }

    private void Cancel() => MudDialog.Cancel();
}