@using Zeiterfassung.Data
@using System.ComponentModel.DataAnnotations

@namespace Zeiterfassung.Components.Dialogs

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">@DialogTitle</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" Model="projectModel">
            <MudTextField @ref="_projectNameField" @bind-Value="projectModel.Name"
                          Label="Projektname"
                          Required="true"
                          RequiredError="Bitte geben Sie einen Namen an."
                          For="@(() => projectModel.Name)" />

            <MudTextField @bind-Value="projectModel.Description"
                          Label="Beschreibung (optional)"
                          Lines="3"
                          Class="mt-3"
                          For="@(() => projectModel.Description)" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Abbrechen</MudButton>
        <MudButton Color="MudBlazor.Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@(!success)">Speichern</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; }

    [Parameter]
    public Project? ProjectToEdit { get; set; }

    private MudTextField<string> _projectNameField = default!;

    private MudForm form;
    private bool success;
    private Project projectModel = new();
    private string DialogTitle = "Neues Projekt erstellen";

    protected override void OnInitialized()
    {
        if (ProjectToEdit is not null)
        {
            DialogTitle = "Projekt bearbeiten";
            projectModel = ProjectToEdit;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // set focus to projectNameField
            await Task.Delay(100);
            await _projectNameField.FocusAsync();
        }
    }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(projectModel));
    }

    private void Cancel() => MudDialog.Cancel();
}